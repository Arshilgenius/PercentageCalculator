<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/order"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:textStyle="normal"
        android:background="#0689D8"
        android:text="SGPA To Percentage (B.Tech)"
        android:textColor="@android:color/white"
        android:onClick="per1" />



    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/Virtualbp"
        android:onClick="per2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textStyle="normal"
        android:textSize="22sp"
        android:background="#0689D8"
        android:text="SGPA To Percentage (Non B.Tech)"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:onClick="per3"
        android:textStyle="normal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="#0689D8"
        android:textSize="22sp"
        android:text="CGPA To Percentage (School)"
        android:textColor="@android:color/white" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>


</LinearLayout>
